                    android:textSize="@dimen/sp_8" />
                <ImageView
                    android:id="@+id/ivZDcd"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_cd"
