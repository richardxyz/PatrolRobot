                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/llc"
            android:layout_width="@dimen/dp_50"
