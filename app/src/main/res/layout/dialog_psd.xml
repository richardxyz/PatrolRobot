<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="巡检拍摄点"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前塔号："
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/etDQNum"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:background="@drawable/edit_shape"
            android:hint="当前塔号"
            android:maxLines="1"
            android:textColor="@color/yellow"
            android:textColorHint="@color/gray_10"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前塔型："
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_14" />

        <Spinner
            android:id="@+id/spinner_TX"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:background="@drawable/spinner_shape"
            android:dropDownSelector="@color/spinner_dropdown"
            android:entries="@array/spinner_tx"
            android:gravity="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相对位置："
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_14" />

        <Spinner
            android:id="@+id/spinner_XDWZ"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:background="@drawable/spinner_shape"
            android:dropDownSelector="@color/spinner_dropdown"
            android:entries="@array/spinner_xdwz"
            android:gravity="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防震锤数："
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/etFZCNum"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:background="@drawable/edit_shape"
            android:hint="防震锤数"
            android:maxLines="1"
            android:textColor="@color/yellow"
            android:textColorHint="@color/gray_10"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="充电桩："
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_14" />

        <Spinner
            android:id="@+id/spinner_CDZ"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:background="@drawable/spinner_shape"
            android:dropDownSelector="@color/spinner_dropdown"
            android:entries="@array/spinner_cdz"
            android:gravity="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.6" />
    </LinearLayout>

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/btn_clicked"
        android:text="确认添加"
        android:textColor="@color/yellow"
        android:textStyle="bold" />
</LinearLayout>