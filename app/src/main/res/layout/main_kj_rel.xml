<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llKJREL"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llXL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_70"
        android:background="@drawable/ll_clicked"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5">

        <ImageView
            android:id="@+id/ivXL"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/ic_xl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线路"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llXLPopup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/llXL"
        android:background="@drawable/popup_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="巡检线路"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线路编号："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/etXLNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_shape"
                android:hint="必填"
                android:maxLines="1"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始塔号："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/etXLQ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_shape"
                android:hint="必填"
                android:maxLines="1"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终止塔号："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/etXLZ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_shape"
                android:hint="必填"
                android:maxLines="1"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <Button
            android:id="@+id/btnXLOk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/btn_clicked"
            android:scaleType="centerCrop"
            android:text="确认添加"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llXQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llXL"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/ll_clicked"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5">

        <ImageView
            android:id="@+id/ivXQ"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/ic_xq_b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llXQPopup"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toRightOf="@id/llXQ"
        android:background="@drawable/popup_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="已配置拍摄角度"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvXQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llXJ"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_150"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivXJUp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ll_clicked"
            android:scaleType="centerCrop"
            android:src="@mipmap/jq_up" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30" />

        <ImageView
            android:id="@+id/ivXJDown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ll_clicked"
            android:scaleType="centerCrop"
            android:src="@mipmap/jq_down" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llKJGH"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_38"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivKJGLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ll_clicked"
            android:scaleType="centerCrop"
            android:src="@mipmap/jq_left" />

        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/ivKJGRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ll_clicked"
            android:scaleType="centerCrop"
            android:src="@mipmap/jq_right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llKJGV"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_150"
        android:layout_above="@id/llKJGH"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivKJGUp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ll_clicked"
            android:scaleType="centerCrop"
            android:src="@mipmap/jq_up" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30" />

        <ImageView
            android:id="@+id/ivKJGDown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ll_clicked"
            android:scaleType="centerCrop"
            android:src="@mipmap/jq_down" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAffirm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_9"
        android:layout_toLeftOf="@id/llKJGH"
        android:background="@drawable/btn_clicked"
        android:scaleType="centerCrop"
        android:text="位置确认"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/llTJ"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_100"
        android:layout_above="@id/llKJGV"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivTJAdd"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/ll_clicked"
            android:scaleType="centerCrop"
            android:src="@mipmap/s_add" />

        <TextView
            android:id="@+id/tvCXT"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_weight="1"
            android:gravity="center"
            android:text="调焦"
            android:textColor="@color/yellow"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivTJMinus"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/ll_clicked"
            android:scaleType="centerCrop"
            android:src="@mipmap/s_minus" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llWc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/ll_clicked"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5">

        <ImageView
            android:id="@+id/ivWc"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/ic_wc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>


</RelativeLayout>